{
  "ReverseProxy": {
    "Routes": {
      "users": {
        "ClusterId": "userCluster",
        "Match": {
          "Path": "/api/userms/{**catch-all}"
        }
      },
      "roles": {
        "ClusterId": "roleCluster",
        "Match": {
          "Path": "/api/rolems/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "userCluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Active": {
            "Path": "/health",
            "Interval": "00:00:05",
            "Timeout": "00:00:02"
          }
        },
        "Destinations": {
          "userService1": { "Address": "https://localhost:7101/" },
          "userService2": { "Address": "https://localhost:7101/" },// YOU CAN ADD MULTIPLE INSTANCE AS PER DEPLOYEMENT
          "userService3": { "Address": "https://localhost:7101/" },// YOU CAN ADD MULTIPLE INSTANCE AS PER DEPLOYEMENT
          "userService4": { "Address": "https://localhost:7101/" } // YOU CAN ADD MULTIPLE INSTANCE AS PER DEPLOYEMENT
        }
      },
      "roleCluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Active": {
            "Path": "/health",
            "Interval": "00:00:05",
            "Timeout": "00:00:02"
          }
        },
        "Destinations": {
          "roleService1": { "Address": "https://localhost:7201/" },
          "roleService2": { "Address": "https://localhost:7201/" } // YOU CAN ADD MULTIPLE INSTANCE AS PER DEPLOYEMENT
        }
      }
    }
  }
}
